{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb" 
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1",
        "headers": {
          "Cache-Control": "public, max-age=3600"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/app.py"
      }
    ]
  }
  